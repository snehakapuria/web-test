<div class="row">
<table>
  <thead>
    <tr>
      <th colspan="3"> List of candidates </th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |m|}}
      <tr>
        <td> {{m.firstName}}, {{m.lastName}}</td>
        <td> <a {{action "checkResults" m.id}}> check results </a> </td>
        <td><a {{action "deleteCandidate" m.id}}>delete candidate </a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
